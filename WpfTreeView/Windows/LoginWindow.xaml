<Window x:Class="GoogleDriveTreeView.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleDriveTreeView"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="350" 
        Width="450" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="LightGray">
        <Border>
            <StackPanel Margin="20">
                <Label Content="LOGIN" FontSize="25" HorizontalAlignment="Center" />
                <Separator Background="SlateGray"/>
                <Label Content="Username" FontSize="15" HorizontalAlignment="Left" />
                <TextBox x:Name="txtUsername" FontSize="20"/>
                <Label Content="Password" FontSize="15" HorizontalAlignment="Left" />
                <PasswordBox x:Name="txtPassword" FontSize="20"/>
                <Button 
                    IsDefault="True"
                    x:Name="btnSubmit" 
                    Content="SUBMIT" 
                    Click="btnSubmit_Click"
                    Background="PaleGreen" 
                    FontSize="15" 
                    Margin="60 50"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
